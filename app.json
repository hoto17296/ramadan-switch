{
  "name": "Ramadan Switch",
  "description": "Send webhooks to sunset and sunrise times.",
  "repository": "https://github.com/hoto17296/ramadan-switch",
  "env": {
    "TZ": {
      "description": "Time Zone",
      "value": "Asia/Tokyo",
      "required": false
    },
    "POS_LAT": {
      "description": "Latitude",
      "value": "35.6"
    },
